---
import Hamburger from "../components/Hamburger.astro";

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/x-icon" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<header class=""> <!--elementos especificos en el mismo espacio-->
			<nav class="" id="nav" aria-label="Top">
				<div class="logo">
					<a href="/">
						<span class="sr-only">Astro Starter</span> <!--modifica el estilo de texto-->
					</a>
				</div>
				<div class="menu">
					<a href="/" class="">Home</a>
					<a href="/about" class="">about</a>
				</div> <!--da los limites de la pagina-->
				<Hamburger /> <!--menu animado-->
			</nav> <!--insterta enlaces-->
			<slot />
		</header> <!--especifica navegacion-->
	</body> <!--modifica el aspecto de la pagina-->
</html>


<style>
	#nav {
		display: flex; /*extension y relleno de un objeto */
		justify-content: space-between;  /* aplica separacion y aliniamiento horizontal*/
	}
</style>
